---
import Layout from "../layouts/Layout.astro";
import Card from "../components/Card.astro";
import Video from "../components/Video.astro";
import Intro from "../components/Intro.astro";
import Bento from "../components/Bento.astro";
import PreFooter from "../components/PreFooter.astro";
import Footer from "../components/Footer.astro";
---

<Layout title="WAudiovisual" description="Encuentra en este lugar el mejor lugar para guardar tus momentos con fotos y videos hermosos">
  <Video />

  <main>
    <Intro />
    <Bento />
    <PreFooter />
  </main>

  <Footer />
</Layout>

<style>
  main {
    margin: auto;
    padding: 1rem;
    width: 800px;
    max-width: calc(100% - 2rem);
    color: white;
    font-size: 20px;
    line-height: 1.6;
  }
</style>
